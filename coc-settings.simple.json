{
    "coc.preferences.currentFunctionSymbolAutoUpdate": true,
    // "coc.preferences.colorSupport": true,
    "coc.preferences.formatOnType": true,
    "coc.preferences.formatOnSave": true,
    "suggest.enablePreview": true,
    // "suggest.echodocSupport": true,
    "suggest.noselect": true,
    "diagnostic.errorSign": "✘",
    "diagnostic.warningSign": "⚠",
    "diagnostic.infoSign": "⋆",
    "diagnostic.hintSign": "⋅",
    "list.normalMappings": {
        "<C-n>": "normal:j",
        "<C-p>": "normal:k",
        "t": "action:tabe",
        "v": "action:vsplit",
        "s": "action:split",
        "d": "expr:GetDeleteAction"
    },
    "list.insertMappings": {
        "<CR>": "do:defaultaction",
        "<C-r>": "do:refresh",
        "<C-g>": "do:switch",
        "<C-n>": "normal:j",
        "<C-p>": "normal:k",
        "<C-t>": "action:tabe",
        "<C-v>": "action:vsplit",
        "<C-s>": "action:split",
        "<C-w>": "command:wincmd k"
    },
    "git.addedSign.hlGroup": "GitGutterAdd",
    "git.changedSign.hlGroup": "GitGutterChange",
    "git.removedSign.hlGroup": "GitGutterDelete",
    "git.topRemovedSign.hlGroup": "GitGutterDelete",
    "git.changeRemovedSign.hlGroup": "GitGutterChangeDelete",
    "git.addGBlameToVirtualText": false,
    "git.addGBlameToBufferVar": true,
    "emmet.includeLanguages": {
        "vue-html": "html"
    },
    "vetur.validation.style": false,
    "vetur.format.options.tabSize": 4,
    "vetur.format.defaultFormatter.js": "prettier-eslint",
    "vetur.format.defaultFormatterOptions": {
        "prettyhtml": {
            "singleQuote": true
        },
        "prettier": {
            "printWidth": 128,
            "trailingComma": "all",
            "tabWidth": 4,
            "semi": true,
            "singleQuote": true,
            "bracketSpacing": false,
            "eslintIntegration": true,
            "jsxBracketSameLine": false,
            "parser": "babylon",
            "arrowParens": "avoid"
        }
    },
    "eslint.packageManager": "yarn",
    "eslint.autoFixOnSave": true,
    "eslint.format.enable": true,
    "vetur.dev.logLevel": "INFO",
    "python.formatting.provider": "black",
    "python.formatting.blackArgs": ["--line-length=100"],
    "python.formatting.autopep8Args": ["--max-line-length=100"],
    "python.linting.enabled": true,
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Args": ["--max-line-length=100"],
    "python.linting.pylintEnabled": true,
    "python.linting.pytypeEnabled": false,
    "python.linting.pycodestyleEnabled": false,
    "python.linting.pylintArgs": ["--disabled=W0120,useless-else-on-loop"],
    "python.sortImports.path": "isort",
    "python.sortImports.args": ["--length-sort", "--dont-order-by-type", "--force-single-line-imports"],
    "python.pythonPath": "python",
    "pyright.organizeimports.provider": "isort",
    "python.analysis.typeshedPaths": ["~/.pyright/typeshed/"],
    "snippets.extends": {
        "cpp": ["c", "cpp"],
        "javascriptreact": ["javascript"],
        "typescript": ["javascript"]
    },
    "snippets.ultisnips.directories": ["UltiSnips"],
    "yank.list.maxsize": 999,
    "yank.limit": 999
}
