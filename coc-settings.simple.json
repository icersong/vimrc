{
    "coc.preferences.currentFunctionSymbolAutoUpdate": true,
    "coc.preferences.formatOnType": true,
    "coc.preferences.formatOnSave": true,
    "coc.preferences.formatOnSaveFiletypes": [
        "vue",
        "css",
        "xml",
        "json",
        "html",
        "xhtml",
        "python",
        "markdown",
        "javascript"
    ],
    "suggest.noselect": true,
    "diagnostic": {
        "errorSign": "✘",
        "warningSign": "⚠",
        "infoSign": "⋆",
        "hintSign": "⋅"
    },
    "list.normalMappings": {
        "<C-n>": "normal:j",
        "<C-p>": "normal:k",
        "t": "action:tabe",
        "v": "action:vsplit",
        "s": "action:split",
        "d": "expr:GetDeleteAction"
    },
    "list.insertMappings": {
        "<CR>": "do:defaultaction",
        "<C-r>": "do:refresh",
        "<C-g>": "do:switch",
        "<C-n>": "normal:j",
        "<C-p>": "normal:k",
        "<C-t>": "action:tabe",
        "<C-v>": "action:vsplit",
        "<C-s>": "action:split",
        "<C-w>": "command:wincmd k"
    },
    "git.addedSign.hlGroup": "GitGutterAdd",
    "git.changedSign.hlGroup": "GitGutterChange",
    "git.removedSign.hlGroup": "GitGutterDelete",
    "git.topRemovedSign.hlGroup": "GitGutterDelete",
    "git.changeRemovedSign.hlGroup": "GitGutterChangeDelete",
    "git.addGBlameToVirtualText": false,
    "git.addGBlameToBufferVar": true,
    "emmet.includeLanguages": {
        "vue-html": "html"
    },
    "vetur.format.enable": true,
    "vetur.dev.logLevel": "debug",
    "vetur.trace.server": "verbose",
    "vetur.formatterPriority": 2,
    "vetur.format.options.tabSize": 4,
    "vetur.format.defaultFormatterOptions": {
        "prettier": {
            "printWidth": 110,
            "trailingComma": "all",
            "tabWidth": 4,
            "semi": true,
            "singleQuote": true,
            "bracketSpacing": false,
            "bracketSameLine": true,
            "parser": "babel",
            "arrowParens": "avoid"
        }
    },
    "prettier.enable": true,
    "prettier.formatterPriority": 1,
    "prettier.printWidth": 110,
    "prettier.trailingComma": "all",
    "prettier.tabWidth": 4,
    "prettier.semi": true,
    "prettier.singleQuote": true,
    "prettier.bracketSpacing": false,
    "prettier.bracketLine": true,
    "prettier.bracketSameLine": true,
    "prettier.arrowParens": "avoid",
    "prettier.disableLanguages": ["vue"],
    "prettier": {
        "printWidth": 110,
        "trailingComma": "all",
        "tabWidth": 4,
        "semi": true,
        "singleQuote": true,
        "bracketSpacing": false,
        "bracketSameLine": true,
        "parser": "babel",
        "arrowParens": "avoid"
    },
    "eslint.enable": true,
    "eslint.formatterPriority": 9,
    "eslint.packageManager": "yarn",
    "eslint.autoFixOnSave": true,
    "eslint.format.enable": true,
    "eslint.probe": ["vue", "html", "json", "markdown", "javascript", "typescript"],
    "eslint.execArgv": [],
    "html.format.enable": true,
    "html.filetypes": ["html", "xhtml", "blade", "handlebars", "htmldjango"],
    "html.format.extraLiners": "head, body, /html",
    "pyright.organizeimports.provider": "isort",
    "python.sortImports.path": "isort",
    "python.sortImports.args": ["--length-sort", "--dont-order-by-type", "--force-single-line-imports"],
    "python.formatting.provider": "black",
    "python.formatting.blackArgs": ["--line-length=100"],
    "python.formatting.autopep8Args": ["--max-line-length=100"],
    "python.linting.enabled": true,
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Args": ["--max-line-length=100"],
    "python.linting.pylintEnabled": true,
    "python.linting.pytypeEnabled": false,
    "python.linting.pycodestyleEnabled": false,
    "python.linting.pylintArgs": ["--disabled=W0120,useless-else-on-loop"],
    "python.pythonPath": "python",
    "python.analysis.typeshedPaths": ["~/.pyright/typeshed/"],
    "snippets.extend.spp": ["c", "cpp"],
    "snippets.extend.savascriptreact": ["javascript"],
    "snippets.extend.sypescript": ["javascript"],
    "snippets.ultisnips.directories": ["UltiSnips"],
    "yank.list.maxsize": 999,
    "yank.limit": 999,
    "languageserver": {
        "bash": {
            "command": "bash-language-server",
            "args": ["start"],
            "filetypes": ["sh"],
            "ignoredRootPaths": ["~"]
        },
        "dockerfile": {
            "command": "docker-langserver",
            "filetypes": ["dockerfile"],
            "args": ["--stdio"]
        },
        "graphql": {
            "command": "graphql-lsp",
            "args": ["server", "-m", "stream"],
            "filetypes": ["graphql", "typescript", "typescriptreact"]
        }
    }
}
